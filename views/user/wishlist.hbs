{{> header}}

<div class="u-s-p-b-60">

  <!--====== Section Intro ======-->
  <div class="section__intro u-s-m-b-60">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section__text-wrap">
            <h1 class="section__heading u-c-secondary">Wishlist</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--====== End - Section Intro ======-->

  <!--====== Section Content ======-->
  <div class="section__content">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">

          <!--====== Wishlist Product ======-->
            {{!-- {{#if items.product_id}} --}}
          <div class="w-r u-s-m-b-30">
            {{#if items}}
            {{#each items}}
            <div class="w-r__container">
              <div class="w-r__wrap-1">
                <div class="w-r__img-wrap">

                  <img
                    class="u-img-fluid"
                    src="{{this.product_id.image}}"
                    alt=""
                  /></div>
                <div class="w-r__info">

                  <span class="w-r__name">

                    <a href="product-detail.html">{{this.product_id.name}}</a></span>

                  <span class="w-r__category">

                    <a href="shop-side-version-2.html">{{this.product_id.category}}</a></span>

                  <span class="w-r__price">â‚¹{{this.product_id.price}}

                    {{!-- <span class="w-r__discount">5% off</span> --}}
                    </span>
                    </div>
              </div>
              <div class="w-r__wrap-2">

                <a
                href="/addProductToCart/{{this.product_id._id}}"
                  class="w-r__link btn--e-brand-b-2"
                  data-modal="modal"
                  style="color: wheat;"
                  data-modal-id="#add-to-cart"
                >ADD TO CART</a>

                <a
                  class="w-r__link btn--e-transparent-platinum-b-2"
                  href="/product/{{this.product_id._id}}"
                >VIEW</a>

                <a
                  class="w-r__link btn--e-transparent-platinum-b-2"
                  href="/deleteWishlistProduct/{{this.product_id._id}}"
                >REMOVE</a></div>
            </div>
          </div>
          {{/each}}
          <!--====== End - Wishlist Product ======-->
        </div>
        <div class="col-lg-12">
          <div class="route-box">
            <div class="route-box__g">

              <a class="route-box__link" href="/products"><i
                  class="fas fa-long-arrow-alt-left"
                ></i>

                <span>CONTINUE SHOPPING</span></a></div>
            {{!-- <div class="route-box__g">

              <a class="route-box__link" href="wishlist.html"><i
                  class="fas fa-trash"
                ></i>

                <span>CLEAR WISHLIST</span></a></div> --}}
          </div>
        </div>
        {{else}}
         <h1>Wishlist is empty</h1>
         <div class="route-box__g pt-5">

              <a class="route-box__link" href="/products"><i
                  class="fas fa-long-arrow-alt-left"
                ></i>

                <span>CONTINUE SHOPPING</span></a></div>
         {{/if}}
      </div>
    </div>
  </div>
  <!--====== End - Section Content ======-->
</div>